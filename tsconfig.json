
{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/Views/react/src/**/*.ts", "src/Views/react/src/**/*.tsx"],
  "exclude": ["node_modules"]
}

